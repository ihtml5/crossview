{
  "name": "crossview-ui",
  "version": "0.2.9",
  "main": "dist/index.js", 
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "analyze-components": "web-component-analyzer analyze 'src/**/*.{js,ts}' --outFile custom-elements.json",
    "storybook": "npm run analyze-components && start-storybook -p 6006",
    "build-storybook": "npm run analyze-components && build-storybook",
    "new-element": "hygen element new",
    "clear-cache": "rimraf node_modules/.cache",
    "start": "webpack serve --config webpack.config.js",
    "build": "webpack --config webpack.config.js && npm run analyze",
    "analyze": "wca analyze 'src/components/**/*.ts' --outFile custom-elements.json",
    "format": "prettier --write --single-quote src/components/*/ui-*",
    "test": "jest integration --config=jest.config.js",
    "test:coverage": "jest --coverage",
    "test:e2e": "JEST_PUPPETEER_CONFIG=jest-puppeteer.config.cjs jest",
    "watch": "webpack --config webpack.config.js && npm run analyze"
  },
